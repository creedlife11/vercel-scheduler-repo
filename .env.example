# Authentication Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration
DATABASE_URL="file:./dev.db"

# Security Configuration
ENABLE_METRICS=false
MAX_REQUEST_SIZE_MB=2
MAX_ENGINEERS=20
MAX_WEEKS=52
MAX_LEAVE_ENTRIES=1000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_HOUR_EDITOR=50
RATE_LIMIT_REQUESTS_PER_HOUR_ADMIN=200
RATE_LIMIT_HEALTH_CHECKS_PER_HOUR=1000

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_PRIVACY_HASHING=true
ENABLE_TEAM_ISOLATION=true