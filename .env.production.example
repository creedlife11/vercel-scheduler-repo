# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Environment
VERCEL_ENV=production
NODE_ENV=production

# Authentication (required in production)
ENABLE_AUTH=true
NEXTAUTH_SECRET=your-production-secret-here
NEXTAUTH_URL=https://your-domain.com
ALLOWED_DOMAINS=your-company.com,trusted-partner.com

# Database (required in production)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Feature Flags
MAX_WEEKS_ALLOWED=52
FAIRNESS_THRESHOLD=0.8
MAX_REQUEST_SIZE_MB=2.0

# Rate Limiting (enabled in production)
ENABLE_RATE_LIMITING=true
RATE_LIMIT_HOUR=100
RATE_LIMIT_MINUTE=10
RATE_LIMIT_BURST=20

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=false
ENABLE_ERROR_TRACKING=true

# Security
CORS_ORIGINS=https://your-domain.com
CSRF_PROTECTION=true

# Edge Config (recommended for production)
EDGE_CONFIG=your-edge-config-id
EDGE_CONFIG_TOKEN=your-edge-config-token

# Production-specific features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ARTIFACT_SHARING=true
ENABLE_PRESET_SHARING=true

# Optional: External services
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id