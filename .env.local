# Build-time environment variables
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-for-development-only
DATABASE_URL="file:./dev.db"

# Feature flags for build
ENABLE_METRICS=false
ENABLE_AUDIT_LOGGING=false
ENABLE_PRIVACY_HASHING=false
ENABLE_TEAM_ISOLATION=false

# Build-safe limits
MAX_REQUEST_SIZE_MB=2
MAX_ENGINEERS=20
MAX_WEEKS=52
MAX_LEAVE_ENTRIES=1000

# Rate limiting (disabled for build)
RATE_LIMIT_REQUESTS_PER_HOUR_EDITOR=1000
RATE_LIMIT_REQUESTS_PER_HOUR_ADMIN=1000
RATE_LIMIT_HEALTH_CHECKS_PER_HOUR=10000